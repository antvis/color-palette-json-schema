{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Color Palette",
  "description": "A Color Palette",
  "type": "object",

  "definitions": {
    "HexColor": {
      "type": "object",
      "properties": {
        "space": {
          "description": "Color space.",
          "type": "string",
          "enum": ["hex"]
        },
        "value": {
          "description": "Color value in hex space.",
          "type": "string",
          "pattern": "^#(?:[0-9a-fA-F]{3}){1,2}$"
        }
      },
      "required": ["space", "value"]
    },
    "ColorInfo": {
      "type": "object",
      "properties": {
        "name": {
          "description": "Name of a specific color.",
          "type": "string"
        },
        "undertone": {
          "description": "Undertone of a color.",
          "type": "string",
          "enum": ["warm", "neutral", "cool"]
        },
        "usage": {
          "description": "Sematical usage.",
          "type": "string"
        }
      }
    },
    "Color": {
      "allOf": [
        { "$ref": "#/definitions/ColorInfo" },
        {
          "oneOf": [{ "$ref": "#/definitions/HexColor" }]
        }
      ]
    },
    "PaletteInfo": {
      "type": "object",
      "properties": {
        "name": {
          "description": "The name of the color palette.",
          "type": "string"
        },
        "semantic": {
          "description": "What the palette stands for or can be used for.",
          "type": ["string", "null"]
        }
      },
      "required": ["name", "semantic"]
    },
    "CategoricalPalette": {
      "allOf": [
        { "$ref": "#/definitions/PaletteInfo" },
        {
          "properties": {
            "type": {
              "description": "Type of the palette.",
              "type": "string",
              "enum": ["categorical"]
            },
            "colors": {
              "description": "Colors of this palette.",
              "type": "array",
              "items": {
                "oneOf": [{ "$ref": "#/definitions/HexColor" }]
              }
            }
          }
        }
      ]
    },
    "DiscreteScalePalette": {
      "allOf": [
        { "$ref": "#/definitions/PaletteInfo" },
        {
          "properties": {
            "type": {
              "description": "Type of the palette.",
              "type": "string",
              "enum": ["discrete-scale"]
            },
            "colors": {
              "description": "Colors of this palette.",
              "type": "array",
              "items": {
                "oneOf": [{ "$ref": "#/definitions/HexColor" }]
              }
            }
          }
        }
      ]
    },
    "ContinuousScalePalette": {
      "allOf": [
        { "$ref": "#/definitions/PaletteInfo" },
        {
          "properties": {
            "type": {
              "description": "Type of the palette.",
              "type": "string",
              "enum": ["continuous-scale"]
            },
            "colors": {
              "description": "Colors of this palette.",
              "type": "array",
              "items": {
                "oneOf": [{ "$ref": "#/definitions/HexColor" }]
              }
            }
          }
        }
      ]
    }
  },

  "properties": {
    "brandName": {
      "description": "The name of the whole brand (by org or company) of the palettes.",
      "type": "string"
    },
    "palettes": {
      "description": "All palettes (groups of colors).",
      "type": "array",
      "items": {
        "oneOf": [
          { "$ref": "#/definitions/CategoricalPalette" },
          { "$ref": "#/definitions/DiscreteScalePalette" },
          { "$ref": "#/definitions/ContinuousScalePalette" }
        ]
      },
      "minItems": 1,
      "uniqueItems": true
    }
  },

  "required": ["palettes"],

  "additionalProperties": false
}
